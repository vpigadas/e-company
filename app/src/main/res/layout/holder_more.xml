<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/more_icon"
            android:layout_width="28dp"
            android:src="@drawable/ic_add_circle_outline_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/more_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="28dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/more_title"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/more_icon"
            app:layout_constraintBottom_toBottomOf="@id/more_icon"
            app:layout_constraintStart_toEndOf="@id/more_icon"
            android:padding="8dp"
            android:textStyle="bold"
            tools:text="@string/add_user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>