<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/company_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/company_user_count"
            app:layout_constraintBottom_toTopOf="@id/company_speciality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/company_speciality"
            app:layout_constraintTop_toBottomOf="@id/company_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/company_name"
            app:layout_constraintStart_toStartOf="@id/company_name"
            android:textSize="12sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            tools:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/company_user_count"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/company_arrow"
            tools:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/company_arrow"
            android:layout_width="48dp"
            android:padding="10dp"
            android:src="@drawable/ic_keyboard_arrow_right_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="48dp"/>

    <View android:layout_width="0dp"
          android:layout_height="1px"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          app:layout_constraintTop_toBottomOf="@id/company_arrow"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:background="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>